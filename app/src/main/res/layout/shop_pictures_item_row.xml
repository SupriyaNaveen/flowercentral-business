<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp16"
    android:orientation="vertical"
    android:padding="@dimen/dp5">

    <ImageView
        android:id="@+id/image_view_shop_picture"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:scaleType="fitXY"
        android:background="@drawable/flower_image_frame"
        android:padding="@dimen/dp2"/>

    <TextView
        android:id="@+id/text_view_picture_upload"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:scaleType="fitXY"
        android:text="@string/btn_upload_pictures"
        android:gravity="center"
        android:background="@drawable/flower_image_frame"
        android:visibility="gone"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"/>

    <TextView
        android:id="@+id/text_view_remove"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/dp5"
        android:text="@string/lbl_remove"
        android:textColor="@color/colorWhite" />

</LinearLayout>